<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ResponsiveCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/bg</item>
    </style>

    <style name="text_style1">
        <item name="fontFamily">@font/works_sans_light</item>
        <item name="android:textColor">#747477</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="text_style2">
        <item name="fontFamily">@font/works_sans_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">90sp</item>
    </style>

    <style name="btn_light">
        <item name="android:background">@drawable/border</item>
        <item name="backgroundTint">@color/dark_button</item>
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="btn_dark">
        <item name="android:background">@drawable/border</item>
        <item name="backgroundTint">@color/darkk_button</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>
</resources>